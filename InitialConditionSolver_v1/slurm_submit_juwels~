#!/bin/bash -x
#SBATCH --account=pra116
#SBATCH --nodes=4
#SBATCH --ntasks-per-node=32
#SBATCH -J JOBNAME                                                                                                                            
#SBATCH --exclusive

# if keyword omitted: Max. 96 tasks per node
#SBATCH --cpus-per-task=3

# for OpenMP/hybrid jobs only
#SBATCH --output=std_out.txt
#SBATCH --error=std_error.txt
#SBATCH --time=2:00:00
#SBATCH --partition=devel

# "batch" for normal use or "devel" for up to 8 nodes up to 2 hours

# *** start of job script ***
# Note: The current working directory at this point is
# the directory where sbatch was executed.
export OMP_NUM_THREADS=${SLURM_CPUS_PER_TASK}

application=Main_PoissonSolver3d.Linux.64.mpiicpc.ifort.OPTHIGH.MPI.OPENMPCC.PETSC.ex
location=/p/home/jusers/bamber1/juwels/Experimental_tools/InitialConditionSolver/

srun ${location}${application} params.txt



